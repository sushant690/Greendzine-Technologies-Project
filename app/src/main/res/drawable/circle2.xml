<!-- custom_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <size
                android:width="75px"
                android:height="75px" />
            <corners android:radius="80px" /> <!-- Adjust radius as per your requirement -->
        </shape>
    </item>
    <!-- Main Rectangle Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1B1C1C" />
            <size
                android:width="35px"
                android:height="35px" />
            <corners android:radius="80px" /> <!-- Adjust radius as per your requirement -->
            <stroke
                android:width="5px"
                android:color="#00FFFEFE" />
        </shape>
    </item>
</layer-list>